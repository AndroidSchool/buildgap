  <div id="toc">
  			<!-- Nested list template -->
              <script type="text/ng-template" id="items_renderer.html">
                <div ui-tree-handle>
                  <a class="btn btn-xs" data-nodrag ng-click="toggle(this)"><span class="glyphicon" ng-class="{'glyphicon-chevron-right': !collapsed, 'glyphicon-chevron-down': collapsed}"></span></a>
                  <a ng-click="activate(item.id)">{{item.title}} </a>
                  <a class="pull-right btn btn-xs" data-nodrag ng-click="remove(this)"><span class="glyphicon glyphicon-remove"></span></a>
                </div>
                <ol ui-tree-nodes="options" ng-model="item.items" ng-class="{hidden: !collapsed}">
                  <li ng-repeat="item in item.items" ui-tree-node ng-include="'items_renderer.html'">
                  </li>
                </ol>
              </script>
              <div ui-tree="options">
                <ol ui-tree-nodes ng-model="toc" ng-click="ac">
                  <li ng-repeat="item in toc" ui-tree-node>
                    <div ui-tree-handle data-drag-hack="true" >
                      <a class="btn btn-xs" data-nodrag ng-click="toggle(this)"><span class="glyphicon" ng-class="{'glyphicon-chevron-right': !collapsed, 'glyphicon-chevron-down': collapsed}"></span></a>
                      <a ng-click="activate(item.id)">{{item.title}} </a>
                      <a class="pull-right btn btn-xs" data-nodrag ng-click="remove(this)"><span class="glyphicon glyphicon-remove"></span></a>
                    </div>
                    <ol ui-tree-nodes="options" ng-model="item.items" ng-class="{hidden: !collapsed}">
                      <li ng-repeat="item in item.items" ui-tree-node ng-include="'items_renderer.html'">
                      </li>
                    </ol>
                    
                  </li>
                </ol>
              </div>

  </div>
